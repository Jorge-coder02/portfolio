---
import RotatingText from "../ui/RotatingText";
---

<main
  id="about"
  class="flex flex-col justify-center items-center container mx-auto p-4 mt-16 h-[100vh]"
>
  <!-- Introducción -->
  <section
    class="flex flex-col justify-center items-center md:text-center my-8 md:mt-16"
  >
    <h1 class="text-5xl w-md font-bold text-center text-black-600">
      Hola, soy
      <RotatingText
        client:load
        texts={["Jorge", "Desarrollador", "Frontend", "Diseñador"]}
        mainClassName="mt-2 px-2 text-white bg-purple-500 sm:px-2 md:px-3 bg-cyan-300 overflow-hidden py-1.5 sm:py-1 md:py-2 justify-center rounded-lg"
        staggerFrom={"last"}
        initial={{ y: "100%" }}
        animate={{ y: 0 }}
        exit={{ y: "-120%" }}
        staggerDuration={0.025}
        splitLevelClassName="overflow-hidden pb-0.5 sm:pb-1 md:pb-1"
        transition={{ type: "spring", damping: 30, stiffness: 400 }}
        rotationInterval={3000}
      />
    </h1>
    <p class="mt-10 md:mt-6 text-lg md:text-xl max-w-2xl">
      Soy un desarrollador web apasionado por crear
      <strong class="text-purple-700 dark:text-purple-500"
        >sitios y aplicaciones eficientes</strong
      >, modernas y accesibles, con un enfoque en la <strong
        class="text-purple-700 dark:text-purple-500"
        >experiencia del usuario</strong
      > y el diseño responsive.
    </p>
  </section>
  <section>
    <!-- Botón Disponible para trabajar -->
    <button
      id="boton_trabajo"
      class="btn border-none cursor-default bg-green-500
      hover:bg-green-500
      float-effect"
      >Disponible para trabajar
    </button>
  </section>

  <!-- Botones -->
  <section
    class="flex gap-4 justify-center items-center mx-auto text-center mt-8 border-red-800"
  >
    <!-- Botón Contacto -->
    <a
      target="_blank"
      href="mailto:jorgitenis@hotmail.es?subject=Estás%20contratado%20😉"
      ><button
        type="button"
        class="btn rounded-badge bg-white text-black hover:bg-gray-100
         dark:bg-gray-200 dark:hover:bg-gray-400"
      >
        <svg
          class="w-6 h-6 mr-2"
          viewBox="0 0 48 48"
          xmlns="http://www.w3.org/2000/svg"
          ><title></title><g data-name="8-Email" id="_8-Email"
            ><path
              d="M45,7H3a3,3,0,0,0-3,3V38a3,3,0,0,0,3,3H45a3,3,0,0,0,3-3V10A3,3,0,0,0,45,7Zm-.64,2L24,24.74,3.64,9ZM2,37.59V10.26L17.41,22.17ZM3.41,39,19,23.41l4.38,3.39a1,1,0,0,0,1.22,0L29,23.41,44.59,39ZM46,37.59,30.59,22.17,46,10.26Z"
            ></path></g
          ></svg
        >
        Contacto
      </button></a
    >
    <!-- Botón LinkedIn -->
    <a
      target="_blank"
      href="https://www.linkedin.com/in/jorge-p%C3%A9rez-aceituno-554833248/"
      ><button
        type="button"
        class="btn rounded-badge bg-white text-black hover:bg-gray-100
        dark:bg-gray-200 dark:hover:bg-gray-400"
      >
        <svg
          class="w-6 h-6 mr-2"
          style="fill-rule:evenodd;clip-rule:evenodd;stroke-linejoin:round;stroke-miterlimit:2;"
          version="1.1"
          viewBox="0 0 512 512"
          xml:space="preserve"
          xmlns="http://www.w3.org/2000/svg"
          xmlns:xlink="http://www.w3.org/1999/xlink"
          ><g id="g5891"
            ><path
              d="M512,64c0,-35.323 -28.677,-64 -64,-64l-384,0c-35.323,0 -64,28.677 -64,64l0,384c0,35.323 28.677,64 64,64l384,0c35.323,0 64,-28.677 64,-64l0,-384Z"
              id="background"
              style="fill:#2867b2;"></path><g id="shapes"
              ><rect
                height="257.962"
                id="rect11"
                style="fill:#fff;"
                width="85.76"
                x="61.053"
                y="178.667"></rect><path
                d="M104.512,54.28c-29.341,0 -48.512,19.29 -48.512,44.573c0,24.752 18.588,44.574 47.377,44.574l0.554,0c29.903,0 48.516,-19.822 48.516,-44.574c-0.555,-25.283 -18.611,-44.573 -47.935,-44.573Z"
                id="path13-0"
                style="fill:#fff;fill-rule:nonzero;"></path><path
                d="M357.278,172.601c-45.49,0 -65.866,25.017 -77.276,42.589l0,-36.523l-85.738,0c1.137,24.197 0,257.961 0,257.961l85.737,0l0,-144.064c0,-7.711 0.554,-15.42 2.827,-20.931c6.188,-15.4 20.305,-31.352 43.993,-31.352c31.012,0 43.436,23.664 43.436,58.327l0,138.02l85.741,0l0,-147.93c0,-79.237 -42.305,-116.097 -98.72,-116.097Z"
                id="path15"
                style="fill:#fff;fill-rule:nonzero;"></path></g
            ></g
          ></svg
        >
        LinkedIn
      </button></a
    >
  </section>
</main>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    let boton_trabajo = document.getElementById("boton_trabajo");
    let estado = "disponible"; // Línea a cambiar según situación laboral

    // Cambiar clases al botón según estado === Disponible / Trabajando
    if (boton_trabajo) {
      if (estado === "trabajando") {
        boton_trabajo.classList.remove(
          "bg-green-500",
          "hover:bg-green-500",
          "float-effect"
        );
        boton_trabajo.classList.add("bg-yellow-500", "hover:bg-yellow-500");
        boton_trabajo.classList.add("bg-red-500", "hover:bg-red-500");
        boton_trabajo.innerText = "Actualmente trabajando";
      }

      // Evento para cambiar el texto al hacer clic
      boton_trabajo.addEventListener("click", () => {
        if (
          boton_trabajo.innerText.toLowerCase() === "disponible para trabajar"
        ) {
          boton_trabajo.innerText = "Contratado 😉";
        } else if (
          boton_trabajo.innerText.split(" ")[0].toLowerCase() === "contratado"
        ) {
          boton_trabajo.innerText = "Disponible para trabajar";
        }
      });
    }
  });
</script>
